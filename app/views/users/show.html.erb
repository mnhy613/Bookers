<div class="container">
 <div class="row content">
 <%= render 'users/list', user: @user, book: @book  %>
 <div class='col-xs-9'>
  <% if flash[:notice] %>
  <%= flash[:notice] %>
  <% end %>
    <h2>Books</h2>

	<table class='table table-hover table-inverse'>
		  <thead>
		    <tr>
		      <th></th>
		      <th>Title</th>
		      <th>Opinion</th>
		      <th colspan="3"></th>
		    </tr>
		  </thead>

		<tbody>
		       <% @books.each do |a| %>

              <tr>
	            <td>

	            <%= attachment_image_tag a.user, :profile_image, :size => "100x100", fallback: "no_image.png" %>
	           
	            </td>

				<td>
				　<%= link_to book_path(a.id) do %>
				 <%= a.title %>
				  <% end %>
				</td>
				<td>
				<%= a.body %>
				</td>

			   </tr>
			　　<% end %>
		</tbody>
	</table>
 </div>
</div>
</div>

<footer>
  <div class='container'>
  	<div class='row'>
    	<div class='col-xs-3 col-xs-offset-9'>
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>


