<div class="col-xs-3 sidenav">
 <div class="row">
     <div class="profile-container">
       <h2> User info</h2>
         <table class='table'>
          <tr>


            <%= attachment_image_tag user, :profile_image, :size => "150x150", fallback: "no_image.png" %>

          </tr>
          <tr>
        	  <td>name</td>

        	  <td> <%= current_user.name %></td>
          </tr>
          <tr>
        	  <td>introduction</td>
        	  <td><%= current_user.introduction %></td>
          </tr>
          </table>
        	 
              <% if user != current_user %>
              <p><%= link_to "", user_path(current_user.id), class: "btn btn-block btn-default glyphicon glyphicon-wrench" %></p>
              <% else %>
              <p><%= link_to "", edit_user_path(user.id), class: "btn btn-block btn-default glyphicon glyphicon-wrench" %></p>
              <% end %>
           
          
        
      </div>
      <div class="New book">
        <%= form_for(book) do |f| %>
        <% if book.errors.any? %>
          <%= book.errors.count %>errors prohibited this obj from being saved:
          <% book.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
        <% end %>
       
       <h2>New book</h2>
       
       <h4>title</h4>
       <%= f.text_field :title %>
       
       <h4>opinion</h4>
       <%= f.text_area :body %><br>

       <%= f.submit "Create Book", class: "btn btn-primary btn-block col-xs-6"%>
      <% end %>
     </div>
 </div>
</div>