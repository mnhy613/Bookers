<div class="container">
 <div class="row content">
 <%= render 'users/list', user: current_user, book: @book %>
 <div class='col-xs-9'>
  <h2>Books</h2>

    <table class='table table-hover table-inverse'>
          <thead>
            <tr>
            
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              
            </tr>
          </thead>

          <tbody>
           <% @books.each do |book| %>
            	<tr>
            		<td>
               
                
                <%= link_to user_path(book.user.id) do %>
                 <%= attachment_image_tag book.user, :profile_image, :size => "80x80", fallback: "no_image.png" %>
                 <% end %>
               
                </td>

            		<td>
                <%= link_to book_path(book.id) do %>
            		<%= book.title %>
                <% end %>
            		</td>
                <td>
                <%= book.body %>
                </td>


              </tr>
           <% end %>
          </tbody>
     </table>

<footer>
  <div class='container'>
    <div class='row'>
      <div class='col-xs-3 col-xs-offset-9'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>